{
  "manifest_version": 2,
  "name": "gbf-search",
  "version":"0.2.0",
  "description":"お空の戦いを探す",
  "icons":{
  },
  "browser_action": {
    "default_popup": "dest/html/popup.html"
  },
  "background":{
    "scripts":[
      "dest/js/bundle-twitter.js",
      "dest/js/background.js"
    ]
  },
  "permissions": [
    "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js",
    "https://stream.twitter.com/1.1/statuses/filter.json",
    "clipboardWrite",
    "storage"
  ],
  "web_accessible_resources": [
  ],
  "content_security_policy":"script-src 'self' https://stream.twitter.com/1.1/statuses/filter.json https://ajax.googleapis.com; object-src 'self'"
}

